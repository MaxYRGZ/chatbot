<div id="chatbot" class="chatbot-container">
  <h2 class="chatbot-title">Asistente de Ventas</h2>
  <div id="chat-messages" class="chat-messages"></div>
  <div class="chat-input">
    <input type="text" id="chatbot-input" placeholder="Escribe tu mensaje...">
    <button id="send-message" class="btn btn-primary">Enviar</button>
    <button id="start-listening" class="btn btn-secondary">
      <span id="listening-text">Escuchar</span>
    </button>
    <button id="speak-response" class="btn btn-info">Hablar respuesta</button>
    <a href="/" class="btn btn-danger">Salir</a>
  </div>
  <div id="chatbot-response" class="chatbot-response"></div>
  <div id="listening-indicator" class="listening-indicator"></div>
  <div id="avatar-container" class="avatar-container">
    <svg id="bot-avatar" width="100" height="100" viewBox="0 0 100 100">
      <circle cx="50" cy="50" r="45" fill="#007bff" />
      <circle cx="35" cy="40" r="5" fill="white" />
      <circle cx="65" cy="40" r="5" fill="white" />
      <path id="mouth" d="M 30 70 Q 50 80 70 70" stroke="white" stroke-width="3" fill="none" />
    </svg>
  </div>
</div>

<style>
.chatbot-container {
  max-width: 700px;
  margin: 20px auto;
  padding: 20px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background-color: #f9f9f9;
  font-family: Arial, sans-serif;
}

.chatbot-title {
  text-align: center;
  margin-bottom: 20px;
  color: #333;
}

.chat-messages {
  height: 300px;
  overflow-y: auto;
  border: 1px solid #eee;
  padding: 10px;
  margin-bottom: 20px;
  background-color: #fff;
}

.chat-input {
  display: flex;
  gap: 10px;
  margin-bottom: 10px;
}

.chat-input input {
  flex-grow: 1;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.btn {
  padding: 10px 15px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.btn-primary {
  background-color: #007bff;
  color: white;
}

.btn-secondary {
  background-color: #6c757d;
  color: white;
}

.btn-info {
  background-color: #17a2b8;
  color: white;
}

.btn-danger {
  background-color: #dc3545;
  color: white;
}

.btn:hover {
  opacity: 0.8;
}

.chatbot-response {
  background-color: #e9ecef;
  padding: 10px;
  border-radius: 8px;
  margin-top: 10px;
}

#chat-messages p {
  margin: 5px 0;
  padding: 8px;
  border-radius: 8px;
}

#chat-messages p:nth-child(odd) {
  background-color: #e6f2ff;
  text-align: right;
}

#chat-messages p:nth-child(even) {
  background-color: #f0f0f0;
}

.listening-indicator {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: #dc3545;
  margin: 10px auto;
  display: none;
}

.listening-indicator.active {
  display: block;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(0.95);
    box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.7);
  }
  
  70% {
    transform: scale(1);
    box-shadow: 0 0 0 10px rgba(220, 53, 69, 0);
  }
  
  100% {
    transform: scale(0.95);
    box-shadow: 0 0 0 0 rgba(220, 53, 69, 0);
  }
}

.avatar-container {
  text-align: center;
  margin-top: 20px;
}

#bot-avatar {
  width: 100px;
  height: 100px;
}

</style>

<script>
document.addEventListener('DOMContentLoaded', (event) => {
  const chatMessages = document.getElementById('chat-messages');
  const chatbotInput = document.getElementById('chatbot-input');
  const sendButton = document.getElementById('send-message');
  const startListeningButton = document.getElementById('start-listening');
  const speakResponseButton = document.getElementById('speak-response');
  const listeningText = document.getElementById('listening-text');
  const chatbotResponse = document.getElementById('chatbot-response');
  const listeningIndicator = document.getElementById('listening-indicator');
  const mouth = document.getElementById('mouth');

  function sendMessage(message) {
    fetch('/chatbot/send_message', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
      },
      body: JSON.stringify({ message: message })
    })
    .then(response => response.json())
    .then(data => {
      chatMessages.innerHTML += `<p>Tú: ${message}</p><p>Bot: ${data.response}</p>`;
      chatbotResponse.innerText = data.response;
      chatMessages.scrollTop = chatMessages.scrollHeight;
    });
  }

  sendButton.addEventListener('click', () => {
    const message = chatbotInput.value;
    if (message.trim() !== '') {
      sendMessage(message);
      chatbotInput.value = '';
    }
  });

  chatbotInput.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      sendButton.click();
    }
  });

  // Código para reconocimiento de voz
  const recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
  recognition.lang = 'es-ES';
  recognition.continuous = false;
  recognition.interimResults = false;

  startListeningButton.addEventListener('click', () => {
    recognition.start();
    listeningText.textContent = 'Escuchando...';
    listeningIndicator.classList.add('active');
  });

  recognition.onresult = function(event) {
    const transcript = event.results[0][0].transcript;
    chatbotInput.value = transcript;
    listeningText.textContent = 'Escuchar';
    listeningIndicator.classList.remove('active');
    sendMessage(transcript);
  };

  recognition.onend = function() {
    listeningText.textContent = 'Escuchar';
    listeningIndicator.classList.remove('active');
  };

  speakResponseButton.addEventListener('click', () => {
    const response = chatbotResponse.innerText;
    const utterance = new SpeechSynthesisUtterance(response);
    utterance.lang = 'es-ES';
    
    let talking = true;
    let mouthOpen = false;
    
    // Función para alternar la boca entre abierta (círculo) y cerrada (línea curva)
    function animateMouth() {
      if (!talking) return;

      if (mouthOpen) {
        // Boca cerrada: una línea curva
        mouth.setAttribute("d", "M 30 70 Q 50 80 70 70");
      } else {
        // Boca abierta: un círculo pequeño en el centro de la boca
        mouth.setAttribute("d", "M 45 70 a 10 10 0 1 0 20 0 a 10 10 0 1 0 -20 0");
      }
      
      mouthOpen = !mouthOpen;
      setTimeout(() => requestAnimationFrame(animateMouth), 200);
    }
    
    utterance.onstart = () => {
      talking = true;
      animateMouth();
    };

    utterance.onend = () => {
      talking = false;
      // Restablecer a boca cerrada al terminar
      mouth.setAttribute("d", "M 30 70 Q 50 80 70 70");
    };

    window.speechSynthesis.speak(utterance);
  });
});
</script>